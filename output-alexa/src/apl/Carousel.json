{
  "document": {
    "type": "APL",
    "version": "1.6",
    "theme": "dark",
    "import": [
      {
        "name": "alexa-layouts",
        "version": "1.2.0"
      }
    ],
    "mainTemplate": {
      "parameters": [
        "data"
      ],
      "items": [
        {
          "type": "Container",
          "height": "100vh",
          "width": "100vw",
          "items": [
            {
              "type": "AlexaBackground",
              "backgroundImageSource": "${data.backgroundImageUrl}"
            },
            {
              "type": "AlexaHeader",
              "headerAttributionImage": "${data.header.logo}",
              "headerTitle": "${data.header.title}"
            },
            {
              "type": "Container",
              "height": "100%",
              "width": "100%",
              "shrink": 1,
              "paddingRight": "70",
              "paddingLeft": "70",
              "items": [
                {
                  "type": "Text",
                  "text": "${data.title}",
                  "maxLines": 1,
                  "fontSize": 50
                },
                {
                  "type": "Sequence",
                  "width": "100%",
                  "height": "100%",
                  "scrollDirection": "horizontal",
                  "data": "${data.items}",
                  "snap": "start",
                  "items": [
                    {
                      "type": "AlexaImageListItem",
                      "imageSource": "${data.imageUrl}",
                      "id": "${data.key}",
                      "primaryText": "${data.title}",
                      "secondaryText": "${data.content}",
                      "imageMetadataPrimacy": true,
                      "hideOrdinal": true,
                      "primaryAction": {
                        "type": "SendEvent",
                        "arguments": [
                          "ListElementSelected",
                          "${event.source.id}"
                        ]
                      }
                    }
                  ]
                }
              ]
            },
            {
              "type": "Container",
              "width": "100%",
              "paddingRight": "70",
              "paddingLeft": "70",
              "when": "${data.quickReplies.length}",
              "items": [
                {
                  "type": "Sequence",
                  "id": "footer",
                  "width": "100%",
                  "alignSelf": "center",
                  "scrollDirection": "horizontal",
                  "data": "${data.quickReplies}",
                  "paddingBottom": "30",
                  "snap": "start",
                  "items": [
                    {
                      "type": "AlexaButton",
                      "buttonText": "${data.text}",
                      "buttonStyle": "outlined",
                      "touchForward": "true",
                      "primaryAction": {
                        "type": "SendEvent",
                        "arguments": [
                          "${data}"
                        ]
                      }
                    }
                  ]
                }
              ]
            }
          ]
        }
      ]
    }
  },
  "datasources": {
    "data": {
      "title": "",
      "quickReplies": [],
      "backgroundImageUrl": "",
      "header": {
        "title": "",
        "logo": ""
      },
      "items": []
    }
  }
}

